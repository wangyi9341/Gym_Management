<Application x:Class="GymManager.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GymManager.App.ViewModels"
             xmlns:views="clr-namespace:GymManager.App.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepOrange.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.Orange.xaml" />

                <!-- App styles -->
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ViewModel -> View 映射（通过 ContentControl 自动渲染页面） -->
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <views:DashboardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CoachesViewModel}">
                <views:CoachesView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PrivateTrainingMembersViewModel}">
                <views:PrivateTrainingMembersView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:AnnualCardMembersViewModel}">
                <views:AnnualCardMembersView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
